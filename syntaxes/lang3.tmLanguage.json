{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.lang3",
    "name": "lang3",
    "patterns": [
        {"include": "#all"}
    ],
    "variables": {
        "keywords": "if|else|for|while|break|continue|return|import|from"
    },
    "repository": {
        "all": {
            "patterns": [
                {"include": "#internal"},
                {"include": "#strings-double"},
                {"include": "#strings-single"},
                {"include": "#code-blocks"},
                {"include": "#bools"},
                {"include": "#operators"},
                {"include": "#keywords"},
                {"include": "#types"},
                {"include": "#functions"},
                {"include": "#variables"},
                {"include": "#numbers"},
                {"include": "#tables"},
                {"include": "#comments-header"},
                {"include": "#comments-important"},
                {"include": "#comments-block"},
                {"include": "#comments-line"}
            ]
        },
        "strings-double": {
            "name": "string.quoted.double.lang3",
            "begin": "([a-zA-Z]*)\"",
            "end": "(?<!\\\\)\"",
            "beginCaptures": {
                "1": {"name": "storage.modifier.string.lang3"}
            },
            "patterns": [
                {
                    "begin": "(?<!\\\\)(\\{)",
                    "end": "(\\})",
                    "captures": {
                        "1": {"name": "constant.language.lang3"}
                    },
                    "contentName": "meta.embedded",
                    "patterns": [
                        {"include": "#all"}
                    ]
                }
            ]
        },
        "strings-single": {
            "name": "string.quoted.single.lang3",
            "begin": "([a-zA-Z]*)'",
            "end": "(?<!\\\\)'",
            "beginCaptures": {
                "1": {"name": "storage.modifier.string.lang3"}
            },
            "patterns": [
                {
                    "begin": "(?<!\\\\)(\\{)",
                    "end": "(\\})",
                    "captures": {
                        "1": {"name": "constant.language.lang3"}
                    },
                    "contentName": "meta.embedded",
                    "patterns": [
                        {"include": "#all"}
                    ]
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.lang3",
            "match": "\\-?[0-9]+(\\.[0-9]+)?"
        },
        "bools": {
            "name": "constant.language.lang3",
            "match": "true|false"
        },
        "comments-code-blocks": {
            "begin": "(:)",
            "end": "(;|#|\\n|$)",
            "contentName": " markup.italic.comment.code-block.lang3 meta.embedded.comment.code-block.lang3",
            "captures": {
                "1": {"name": "comment.code-block-surroundings.lang3 constant.language.comment.code-block-surroundings.lang3"},
                "2": {"name": "comment.code-block-surroundings.lang3 constant.language.comment.code-block-surroundings.lang3"}
            },
            "patterns": [
                {"name": "comment.code-block.error.lang3 invalid.illegal.comment.code-block.error.lang3", "match": "[^\\\\\n#]*ERROR[^#\n]*"},
                {"include": "#all"}
            ]
        },
        "comments-errors": {
            "patterns": [
                {
                    "name": "comment.error.lang3 invalid.illegal.comment.error.lang3",
                    "begin": "!",
                    "end": "(?=;|#|\n|$)",
                    "patterns": [
                        {"name": "comment.error.lang3 invalid.illegal.comment.error.lang3", "match": "[^;#\n]+"}
                    ]
                }
            ]
        },
        "comments-line": {
            "name": "comment.line.number-sign.lang3",
            "begin": "#",
            "end": "\n|$",
            "patterns": [
                {"include": "#comments-code-blocks"},
                {"include": "#comments-errors"}
            ]
        },
        "comments-block": {
            "name": "comment.block.lang3",
            "begin": "#{2,}",
            "end": "#{2,}",
            "patterns": [
                {"include": "#comments-code-blocks"},
                {"include": "#comments-errors"}
            ]
        },
        "comments-important": {
            "name": "comment.block.bold.lang3 markup.bold.comment.block.lang3",
            "begin": "^###",
            "end": "#$",
            "patterns": [
                {"include": "#comments-code-blocks"}
            ]
        },
        "comments-header": {
            "name": "comment.block.header.lang3",
            "begin": "^#{4}",
            "end": "#$",
            "patterns": [
                {"include": "#comments-code-blocks"}
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.lang3",
                    "match": "([A-Za-z_][A-Za-z0-9_]*)(?=\\s*=\\s*\\[.*?\\]\\s*:)"
                },
                {
                    "name": "entity.name.function.lang3",
                    "match": "([A-Za-z_][A-Za-z0-9_]*)(?=\\s*\\()"
                }
            ]
        },
        "variables": {
            "name": "variable.other.lang3",
            "match": "([a-zA-Z_][a-zA-Z0-9_]*)|(\\$[\\. ])"
        },
        "types": {
            "patterns": [
                {
                    "name": "meta.type.annotation.lang3",
                    "begin": "(?<=\\bas\\s+)([A-Za-z_][A-Za-z0-9_]*)",
                    "beginCaptures": {"1": {"name": "entity.name.type.lang3"}},
                    "end": "(?=\\s|$|[;,){}\\]])",
                    "patterns": [
                        {"include": "#type-brackets"},
                        {"name": "entity.name.type.lang3", "match": "([A-Za-z_][A-Za-z0-9_]*)"}
                    ]
                },
                {
                    "name": "meta.type.decl.lang3",
                    "begin": "(?!\\b(?:if|else|for|while|break|continue|return|import|from)\\b)([A-Za-z_][A-Za-z0-9_]*)(?=(?:\\s*\\[)|\\s+(?!as\\b)(?!\\b(?:if|else|for|while|break|continue|return|import|from)\\b)[A-Za-z_][A-Za-z0-9_]*)",
                    "beginCaptures": {"1": {"name": "entity.name.type.lang3"}},
                    "end": "(?=\\s+[A-Za-z_][A-Za-z0-9_]*)",
                    "patterns": [
                        {"include": "#type-brackets"},
                        {"name": "entity.name.type.lang3", "match": "([A-Za-z_][A-Za-z0-9_]*)"}
                    ]
                }
            ]
        },
        "type-brackets": {
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {"include": "#type-brackets"},
                {"name": "entity.name.type.lang3", "match": "([A-Za-z_][A-Za-z0-9_]*)"}
            ]
        },
        "keywords": {
            "name": "keyword.control.lang3",
            "match": "\\b(if|else|for|while|break|continue|return|import|from)\\b"
        },
        "operators": {
            "name": "keyword.operator.lang3",
            "match": "\\+\\+|\\-\\-|(\\+|\\-|\\/\\^|%|\\*{1,2}|\\/{1,2}|>{1,2}|<{1,2}|&{1,2}|\\|{1,2}|!|=|\\^)=?|\\bas\\b"
        },
        "tables": {
            "name": "meta.table.lang3",
            "begin": "\\{",
            "end": "\\}",
            "patterns": [
                {
                    "name": "meta.table.header.lang3",
                    "begin": "@",
                    "end": ";",
                    "patterns": [
                        {"include": "#all"}
                    ]
                },
                {"include": "#all"}
            ]
        },
        "code-blocks": {
            "name": "meta.code-block.lang3",
            "begin": "([a-zA-Z]*):",
            "end": ";",
            "beginCaptures": {"1": {"name": "storage.modifier"}},
            "patterns": [
                {"include": "#all"}
            ]
        },
        "internal": {
            "name": "invalid.illegal.reserved.internal.lang3",
            "match": "__internal.*"
        }
    }
}